<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.WantRunning.ToolbarTitle" parent="">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextFields -->
    <style name="Widget.WantRunning.TextInputLayout.Base" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/grayscale_1</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.WantRunning.CompoundButton.BoxedRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_boxed_radio</item>
        <item name="android:textColor">@color/color_btn_boxed_radio_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>