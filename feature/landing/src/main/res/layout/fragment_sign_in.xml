<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_sign_in_horizontal_percent_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <ImageView
        android:id="@+id/iv_sign_in_app_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintBottom_toBottomOf="@id/gl_sign_in_horizontal_percent_45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_sign_in_horizontal_percent_45" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_in_kakao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:minHeight="56dp"
        android:text="카카오 로그인"
        android:textColor="@color/label_kakao"
        app:backgroundTint="@color/container_kakao"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_kakao_24"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconSize="16dp"
        app:iconTint="@color/symbol_kakao"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in_google" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_in_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:minHeight="56dp"
        android:text="구글 로그인"
        android:textColor="@color/label_google"
        app:backgroundTint="@color/container_google"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_google_24"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:iconSize="16dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>