<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Wantrunning" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorPrimaryVariant">@color/primary_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_5</item>
        <item name="colorSecondaryVariant">@color/secondary_4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/pretendard_variable</item>
    </style>
</resources>